<%= form_tag(playlist_path, method: "get") do %>
  <%= label_tag(:q1, "Search for song:") %>
  <%= text_field_tag(:q1) %>
  <%= label_tag(:q2, "by artist:") %>
  <%= text_field_tag(:q2) %>
  <%= submit_tag("Search") %>
<% end %>

<footer class="chat-footer row">
    <div class="col-xs-9">
        <input id="new-message" type="text" class="form-control input-transparent" placeholder="Song title">
        <input id="new-message" type="text" class="form-control input-transparent" placeholder="Artist name">
    </div>
    <div class="col-xs-3">
        <button type="button" id="new-message-btn" class="btn btn-transparent btn-block">Search</button>
    </div>
</footer>
  <%= submit_tag("Search", class: "btn btn-sm") %>
<% end %>
