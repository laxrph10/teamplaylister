
  
 
 
<div class="body">
    <form class="no-margin"
          action="index.html" method="get">
        <fieldset>
            <div class="form-group">
              <%= form_tag(joinparty_path, method: "get") do %>
                <header class="text-align-center">
                    <!-- <label for="code" >PARTY CODE</label> -->
                    <%= label_tag(:code, "Input Party Code Here:") %>
                </header>
                <div class="input-group input-group-lg">
                        <span class="input-group-addon">
                            <i class="fa fa-lock"></i>
                        </span>
                    <input id="password" type="password" class="form-control input-lg"
                           placeholder="Your party code">
                     <%= text_field_tag(:code) %>
                </div>
                  <%= submit_tag("Join a Party!") %>
                <% end %>
            </div>
        </fieldset>
        <header class="text-align-center">
            <h2>OR</h2>
        </header>
        <div class="form-actions spotify.">
            <button type="submit" class="btn btn-block btn-lg btn-danger">
                <span class="small-circle"><i class="fa fa-caret-right"></i></span>
                <small>SPOTIFY</small>
            </button>
        </div>
    </form>
</div>